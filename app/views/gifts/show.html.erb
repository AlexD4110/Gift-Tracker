<p style="color: green"><%= notice %></p>

<%= render partial: 'gifts/gift', locals: { gift: @gift } %>

<br>
<div>
  <%= link_to "Edit this gift", edit_friend_gift_path(@gift.friend, @gift), class: 'btn btn-secondary' %>


  <%= button_to "Destroy this gift", friend_gift_path(@gift.friend, @gift),
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure you want to delete this gift?' } %>

  <div id="alerts"></div>

  <div id="main">
    <%= yield %>
  </div>

</div>
<%= turbo_stream_from @friend %>