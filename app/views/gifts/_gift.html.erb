<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"> Gift Name: <%= gift.name %></h2>
      <p><strong>Price:</strong> <%= number_to_currency(gift.price) %></p>
      <% if gift.link.present? %>
        <%= link_to 'Visit Link', gift.link, target: '_blank', class: 'btn btn-link' %>
      <% end %>

      <div class="mt-4">
        <%= link_to 'Edit', edit_friend_gift_path(gift.friend, gift), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>