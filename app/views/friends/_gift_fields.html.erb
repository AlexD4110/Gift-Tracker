
<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row">
    <div class="col">
      <%= f.label :name, 'Description', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
    <div class="col">
      <%= f.label :price, 'Price', class: 'form-label' %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="col">
      <%= f.label :link, 'Link', class: 'form-label' %>
      <%= f.text_field :link, class: 'form-control' %>
    </div>
    <div class="col-auto d-flex align-items-end">
      <button type="button" data-action="nested-form#remove">Remove Gift</button>
      <%= f.hidden_field :_destroy %>
    </div>
  </div>
</div>