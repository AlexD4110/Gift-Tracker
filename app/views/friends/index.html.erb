<div class="container">
  <h1>Friends List</h1>
  <table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th colspan="2">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to friend.name, friend %></td>
        <td><%= friend.birthday %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: 'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Friend', new_friend_path, class: 'btn btn-primary' %>
</div>
